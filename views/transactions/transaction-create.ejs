<%- include('./../header') ;%>
    <header>
      <h1>Transactions Create</h1>
    </header>

    <main>
      <form method="POST">
        <div class="form-group">
          <label for="exampleFormControlSelect1">Users:</label>
          <select name="user" class="form-control" id="exampleFormControlSelect1">
             <%for(let user of users){%>
              <option value="<%-user.id%>"><%-user.name%></option>
            <%}%>
          </select>
        </div>
        <div class="form-group">
          <label for="exampleFormControlSelect1">Books:</label>
          <select name="book" class="form-control" id="exampleFormControlSelect1">
            <%for(let book of books){%>
              <option value="<%-book.id%>"><%-book.title%></option>
            <%}%>
          </select>
        </div>
        <br/>
        <button style="margin-top:50px" type="submit">Create</button>
      </form>
    </main>
        <script src="https://button.glitch.me/button.js"></script>
  </body>
</html>
